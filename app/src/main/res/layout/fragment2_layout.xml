<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="输入搜索关键字"
        android:visibility="gone"
        app:maxSuggestionsCount="10"></com.mancj.materialsearchbar.MaterialSearchBar>

    <com.jinqiang.RecyclerViewRefresh.IRecyclerView
        android:id="@+id/search_recyc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"></com.jinqiang.RecyclerViewRefresh.IRecyclerView>
</LinearLayout>
